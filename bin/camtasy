#!/usr/bin/env ruby

require 'camtasy'
require "thor"

module Camtasy
  class CLI < Thor
    DEFAULT_URI='druby://localhost:8787'

    desc 'server', 'starts a server.'
    def server
      PhotoServer.new.run(DEFAULT_URI)
    end

    desc 'client', 'connect to a server'
    def client
      Client.new(DEFAULT_URI).run
    end
  end
end

Camtasy::CLI.start
